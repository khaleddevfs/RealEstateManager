<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="110dp"
android:layout_gravity="start">
    <ImageView
        android:id="@+id/real_estate_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_baseline_image_24"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="@null"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/real_estate_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Name"
        android:textColor="@drawable/text_color_selector"
        app:layout_constraintStart_toEndOf="@id/real_estate_image"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/real_estate_region"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:textColor="@drawable/text_color_selector"
        android:text="region"
        app:layout_constraintStart_toEndOf="@id/real_estate_image"
        app:layout_constraintTop_toBottomOf="@id/real_estate_name"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/real_estate_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Price"
        android:textColor="@drawable/text_color_selector"
        app:layout_constraintStart_toEndOf="@id/real_estate_image"
        app:layout_constraintTop_toBottomOf="@id/real_estate_region"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>